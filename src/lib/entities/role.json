    "nome": {
      "type": "string",
      "description": "Nome da função (Admin, Project Manager, Committee Member, Viewer)"
    },
    "descricao": {
      "type": "string",
      "description": "Descrição da função e suas responsabilidades"
    },
    "tipo": {
      "type": "string",
      "enum": [
        "admin",
        "project_manager",
        "committee_member",
        "viewer",
        "custom"
      ],
      "default": "viewer",
      "description": "Tipo de função no sistema"
    },
    "is_system_role": {
      "type": "boolean",
