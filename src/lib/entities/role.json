        "projetos_editar": {
          "type": "boolean",
          "default": false
        },
        "projetos_deletar": {
          "type": "boolean",
          "default": false
        },
        "comites_visualizar": {
          "type": "boolean",
          "default": true
        },
        "comites_criar": {
          "type": "boolean",
          "default": false
        },
        "comites_editar": {
          "type": "boolean",
          "default": false
        },
        "comites_deletar": {
          "type": "boolean",
          "default": false
        },
        "pautas_visualizar": {
          "type": "boolean",
          "default": true
        },
        "pautas_criar": {
          "type": "boolean",
          "default": false
        },
        "pautas_editar": {
          "type": "boolean",
          "default": false
        },
        "pautas_deletar": {
          "type": "boolean",
          "default": false
        },
        "pautas_votar": {
          "type": "boolean",
          "default": true
        },
        "pautas_iniciar_votacao": {
          "type": "boolean",
          "default": false
        },
        "reunioes_visualizar": {
          "type": "boolean",
          "default": true
        },
        "reunioes_criar": {
          "type": "boolean",
